<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
        tools:targetApi="31">

        <!-- Deklarasi untuk CategoryActivity -->
        <activity
            android:name=".Activity.CategoryActivity"
            android:exported="true"
            android:label="@string/title_activity_category"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".Activity.TambahCategoryActivity"
            android:exported="true"
            android:label="@string/title_activity_tambah_category"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />

        <!-- Deklarasi aktivitas lainnya -->
        <activity
            android:name=".Activity.AddInvoiceActifity"
            android:exported="false"
            android:label="title_activity_add_invoice"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar" />
        <activity
            android:name=".Activity.InvoiceListActifity"
            android:exported="false"
            android:label="title_activity_invoice_list"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar" />
        <activity
            android:name=".Activity.reportActivity"
            android:exported="false"
            android:label="title_activity_report"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar" />
        <activity
            android:name=".Activity.ProfileActivity"
            android:exported="false"
            android:label="title_activity_profile"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar" />
        <activity
            android:name=".Activity.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.LoginActivity"
            android:exported="true"
            android:label="@string/login_title"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Activity.RegisterActivity"
            android:exported="true"
            android:label="register_title"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".Activity.DashboardActivity"
            android:exported="true"
            android:label="dashboard_title"
            android:theme="@style/Theme.MaterialComponents.DayNight" />
        <activity
            android:name=".Activity.CashFlowActivity"
            android:exported="true"
            android:label="cashflow_title"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".Activity.ArusKasActivity"
            android:exported="true"
            android:label="arus_kas_title"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".Activity.AddNoteActivity"
            android:exported="true"
            android:label="add_note_title"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".Activity.NoteActivity"
            android:exported="true"
            android:label="note_item_title"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
    </application>

</manifest>
