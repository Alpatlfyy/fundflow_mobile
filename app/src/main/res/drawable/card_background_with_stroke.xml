<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color of the card -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Fill color -->
            <corners android:radius="10dp"/> <!-- Corner radius -->
        </shape>
    </item>
    <!-- Stroke around the card -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Fill color transparent -->
            <stroke android:width="2dp" android:color="@color/gray"/> <!-- Stroke color -->
            <corners android:radius="10dp"/> <!-- Corner radius -->
        </shape>
    </item>
</layer-list>
